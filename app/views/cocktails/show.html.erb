<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6">
      <h3><%= @cocktail.name %></h>
      <%= link_to "Back", cocktails_path %>
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
    </div>
    <div class="col-sm-12 col-md-6">
      <h3>Recipe</h3>
      <table class="table table-bordered">
        <tbody>
          <thead>
            <th>Ingredient</th>
            <th>Description</th>
            <th>Action</th>
          </thead>
            <ul>
              <% @cocktail.doses.each do |dose| %>
                <li><%= dose.ingredient.name %> (<%= dose.description %>)</li>
              <% end %>
            </ul>
<br>
<%= link_to "edit", edit_cocktail_path %>
<%= link_to "New Ingredient", new_cocktail_dose_path(@cocktail) %>

